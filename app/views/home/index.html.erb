<% content_for(:title, t('.title')) %>
  <div class="flex flex-col max-w-4xl mx-auto items-center p-4">
    <div class="w-full">
      <%= render 'date_range', url: home_path %>
      <div class="overflow-x-auto">
        <div class="w-full">
          <div class="h-[260px] md:h-[420px]">
            <canvas
              data-controller="monthly-chart"
              data-monthly-chart-labels-value="<%= @labels.to_json %>"
              data-monthly-chart-data-value="<%= @data.to_json %>">
            </canvas>
          </div>
        </div>
       </div>
    </div>
    <% if @figures.present? %>
      <div class="w-full border rounded-lg divide-y">
        <%= render @figures %>
      </div>
    <% else %>
      <span><%= t(".no_data_available") %></span>
    <% end %>
  </div>