<header>
  <nav class='bg-gray-100'>
    <div class='container mx-auto px-4'>
      <div class='flex items-center justify-between h-15'>
        <!-- ロゴ -->
        <%= link_to 'Figrune', root_path, class: 'text-xl font-semibold tracking-tight' %>     

        <!-- ページ遷移ナビゲーション -->
        <div class='hidden lg:flex lg:items-center lg:space-x-6'>
          <ul class='flex items-center space-x-10'>
            <li>
              <%= link_to 'ホーム', '#', class: "px-2 py-1 border-b-2 transition
                #{current_page?(root_path) ?
                'border-gray-900 text-gray-900 font-medium' :
                'border-transparent text-gray-600 hover:text-gray-900'}" %>
            </li>
            <li>
              <%= link_to '登録', '#', class: "px-2 py-1 border-b-2 transition
                #{current_page?('#') ?
                'border-gray-900 text-gray-900 font-medium' :
                'border-transparent text-gray-600 rounded hover:bg-gray-200 transition'}" %>
            </li>
            <li>
              <%= link_to 'グラフ', '#', class: "px-2 py-1 border-b-2 transition
                #{current_page?('#') ?
                'border-gray-900 text-gray-900 font-medium' :
                'border-transparent text-gray-600 rounded hover:bg-gray-200 transition'}" %>
            </li>
            <li>
              <%= link_to '新規登録', '#', class: "px-2 py-1 border-b-2 transition
                #{current_page?('#') ?
                'border-gray-900 text-gray-900 font-medium' :
                'py-2 text-sm font-medium text-white bg-gray-900 rounded hover:bg-gray-700 transition'}" %>
            </li>
            <li>
              <%= link_to 'ログイン', '#', class: "px-2 py-1 border-b-2 transition
                #{current_page?('#') ?
                'border-gray-900 text-gray-900 font-medium' :
                'border-transparent text-gray-600 rounded hover:bg-gray-200 transition'}" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>